{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-normal",
            "type": "shell",
            "command": "${workspaceRoot}/pawno/pawncc",
            "runOptions": {
                "instanceLimit": 1,
            },
            "args": [
                "${file}",
                "'-i${workspaceFolder}/pawno/include'",
                "'-D${fileDirname}'",
                "'-;+'",
                "'-(+'",
                "'-d3'"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "isBackground": false,
            "presentation": {
                "reveal": "always",
                "clear": true
            },
            "problemMatcher": "$pawncc"
        }
    ],
}